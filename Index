<!-- SCRIPTS -->
<script>
// COUNTDOWN ‚Äî 4 days from first visit
(function() {
  const key = 'rafy_cny_deal_end';
  let endTime = localStorage.getItem(key);
  if (!endTime) {
    endTime = Date.now() + 4 * 24 * 60 * 60 * 1000;
    localStorage.setItem(key, endTime);
  }
  endTime = parseInt(endTime);

  function fmt(n) { return String(n).padStart(2, '0'); }

  function update() {
    const now = Date.now();
    let diff = Math.max(0, endTime - now);
    const d = Math.floor(diff / 86400000); diff %= 86400000;
    const h = Math.floor(diff / 3600000); diff %= 3600000;
    const m = Math.floor(diff / 60000); diff %= 60000;
    const s = Math.floor(diff / 1000);

    const str = d > 0
      ? d + 'd ' + fmt(h) + ':' + fmt(m) + ':' + fmt(s)
      : fmt(h) + ':' + fmt(m) + ':' + fmt(s);

    const el = document.getElementById('countdown-nav');
    if (el) el.textContent = str;
  }
  update();
  setInterval(update, 1000);
})();

// SOCIAL PROOF POPUP
(function() {
  const names = [
    { name: 'Jean', loc: 'France' },
    { name: 'Paul', loc: 'England' },
    { name: 'Sarah', loc: 'London' },
    { name: 'Alex', loc: 'Berlin' },
    { name: 'David', loc: 'Manchester' },
    { name: 'Fatima', loc: 'Dubai' },
    { name: 'Chris', loc: 'Sydney' },
    { name: 'Mike', loc: 'New York' }
  ];
  const popup = document.getElementById('popup');
  const text = document.getElementById('popup-text');
  let last = -1;

  function show() {
    let i = Math.floor(Math.random() * names.length);
    if (i === last) i = (i + 1) % names.length;
    last = i;
    const p = names[i];
    const t = Math.floor(Math.random() * 10) + 1;
    text.innerHTML = `<p style="margin:0;"><strong>${p.name}</strong> from ${p.loc} just booked the <span class="product">CNY Buy 1 Get 1 Free Deal</span></p><div class="time-ago">${t} min ago</div>`;
    popup.classList.add('show');
    setTimeout(() => popup.classList.remove('show'), 4000);
  }
  setTimeout(show, 7000);
  setInterval(show, 20000);
})();

// FAQ ACCORDION
document.querySelectorAll('.faq-q').forEach(btn => {
  btn.addEventListener('click', () => {
    const item = btn.parentElement;
    const answer = item.querySelector('.faq-a');
    const isOpen = item.classList.contains('open');

    document.querySelectorAll('.faq-item.open').forEach(el => {
      el.classList.remove('open');
      el.querySelector('.faq-a').style.maxHeight = '0';
    });

    if (!isOpen) {
      item.classList.add('open');
      answer.style.maxHeight = answer.scrollHeight + 'px';
    }
  });
});
</script>

